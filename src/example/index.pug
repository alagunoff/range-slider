doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title rangeSlider
        link(rel="stylesheet" href="./index.scss")
    body
        .demonstration
            section.demonstration__item
                h2.demonstration__title Слайдер 1
                .demonstration__block
                    .demonstration__slider
                        form.demonstration__form(action="https://echo.htmlacademy.ru", method="post")
                            input.demonstration__field.js-range-slider1(type="text", name="slider1")
                    .demostration__configuration
                        form.demonstration__form(action="https://echo.htmlacademy.ru", method="post")
                            input.demonstration__field(type="text" placeholder="min" name="min")
                            input.demonstration__field(type="text" placeholder="max" name="max")
                            input.demonstration__field(type="text" placeholder="step" name="step")
                            label hide tip
                                input.demonstration__field(type="checkbox" name="hideTip")
                            input(type="submit", value="apply changes")
