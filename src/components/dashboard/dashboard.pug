mixin dashboard
  .dashboard
    form.dashboard__form(action="/mock-address/change-me" method="post")
      .dashboard__group
        p.dashboard__subgroup
          label.dashboard__title Значение ОТ
            input.dashboard__field(type="text" name="firstValue")
        p.dashboard__subgroup
          label.dashboard__title Значение ДО
            input.dashboard__field(type="text" name="secondValue")
        p.dashboard__subgroup
          label.dashboard__title Минимальное значение
            input.dashboard__field(type="text" name="min")
        p.dashboard__subgroup
          label.dashboard__title Максимальное значение
            input.dashboard__field(type="text" name="max")
        p.dashboard__subgroup
          label.dashboard__title Шаг слайдера
            input.dashboard__field(type="text" name="step")
      .dashboard__group
        p.dashboard__subgroup
          label.dashboard__title Показать шкалу
            input.dashboard__field(type="checkbox" name="hasScale")
        p.dashboard__subgroup
          label.dashboard__title Показать подсказку
            input.dashboard__field(type="checkbox" name="hasTip")
        p.dashboard__subgroup
          label.dashboard__title Интервал
            input.dashboard__field(type="checkbox" name="hasInterval")
        p.dashboard__subgroup
          label.dashboard__title Вертикальный вид
            input.dashboard__field(type="checkbox" name="isVertical")
        fieldset.dashboard__subgroup
          legend Цветовые темы слайдера
          label.dashboard__title Голубая тема
            input.dashboard__field(type="radio" name="theme" value="aqua")
          label.dashboard__title Красная тема
            input.dashboard__field(type="radio" name="theme" value="red")